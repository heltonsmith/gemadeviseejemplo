<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre" %>
  </div>

  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :apellido, autofocus: true, autocomplete: "apellido" %>
  </div>

  <div class="field">
    <%= f.label :genero %><br />

    <%= f.label :m %>
    <%= f.radio_button :genero, "masculino" %>

    <%= f.label :f %>
    <%= f.radio_button :genero, "femenino", checked: "checked" %>
  </div>

  <div class="field">
    <% 
    x = {
          "chile" => "cl", 
          "argentina" => "ar", 
          "peru" => "pu",
          "brasil" => "br",
          "colombia" => "co",
          "bolivia" => "bl",
          "estados unidos" => "us"
        } 
    %>

    <%= f.label :pais %><br />
    <%= f.select(:pais, x, {}, { :class => 'form-select' }) %>
  </div>

  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion, autofocus: true, autocomplete: "descripcion" %>
  </div>

   <div class="field">
    <%= f.label :color %><br />
    <%= f.color_field :color %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Registrarse", :class => "btn btn-success" %>
  </div>
<% end %>

<br>

<%= render "devise/shared/links" %>
