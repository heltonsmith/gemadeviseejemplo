<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<br>

<% if user_signed_in? %>
    <p>Usuario: <%= current_user.email %></p>
    <p>Bienvenido: <%= current_user.nombre %> <%= current_user.apellido %></p>
    <p>Id: <%= current_user.id %></p>
    <br>
    <hr>
  
    <p><%= link_to image_tag("/img/ojo.png", :alt => "imagen que muestra los fonos", :class => "verfono"), fonos_path %></p>
    <label for="fonos">Agregar fonos</label>
    <br>
    <hr>

 
    <p><%= link_to image_tag("/img/asignatura.png", :alt => "imagen que matricula", :class => "verfono"), matriculas_form_path %></p>
    <label for="matricula">Matricular asignatura</label>
    <br>
    <hr>
    
    <p><%= link_to image_tag("/img/agregara.png", :alt => "agregar asignatura", :class => "verfono"), asignaturas_path %></p>
    <label for="asignatura">Agregar asignatura</label>
    <br>
    <hr>

    <br>

    <p><%= link_to "Editar datos", edit_user_registration_path %></p>

    <%= link_to "Cerrar Sesion", destroy_user_session_path %>

<% else %>

    <p>Debe iniciar sesión</p>
    <%= link_to "Iniciar sesión", new_user_session_path %>

<% end %>